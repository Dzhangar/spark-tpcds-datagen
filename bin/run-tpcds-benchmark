# Shell script for running TPCDS benchmarks

# Determine the current working directory
_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

if [ -z "${SPARK_HOME}" ]; then
  echo "env SPARK_HOME not defined"
  exit 1
fi

# Load common functions
. "${_DIR}/utils.sh"

# If Spark not compiled, do it here
check_spark_compiled

# Resolve a jar location for the TPCDS data generator
_SCALA_VERSION=`grep "<scala.binary.version>" "${SPARK_HOME}/pom.xml" | head -n1 | awk -F '[<>]' '{print $3}'`
_SPARK_VERSION=`grep "<version>" "${SPARK_HOME}/pom.xml" | head -n2 | tail -n1 | awk -F '[<>]' '{print $3}'`
_JAR_FILE="spark-sql_${_SCALA_VERSION}-${_SPARK_VERSION}-tests.jar"
RESOURCES="$SPARK_HOME/sql/core/target/${_JAR_FILE}"

echo "Using \`spark-submit\` from path: $SPARK_HOME" 1>&2

# An entry point for the TPCDS benchmark class
CLASS="org.apache.spark.sql.execution.benchmark.TPCDSQueryBenchmark"

exec "${SPARK_HOME}"/bin/spark-submit --class $CLASS --master=local[*] --driver-memory 8G ${RESOURCES} "$@"

